syntax enable
set number
set showcmd
set showmatch
set noshowmode
set nocompatible
filetype plugin on 
set relativenumber
set title 		
set hidden
set noswapfile
set smartindent
set autoindent
set nobackup
set nowritebackup
set background=dark 
set sw=2
set encoding=utf-8
set clipboard=unnamed
set numberwidth=1
set mouse=a
